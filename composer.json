	"type": "library",
	"keywords": [
		"wpecs",
		"phpcs",
		"standards",
		"WordPress",
		"WP Engine"
	],
	"license": "GPLv2 or later",
	"require": {
		"php": ">=5.6",
		"squizlabs/php_codesniffer": "^3.2.3",
		"wp-coding-standards/wpcs": "1.*",
		"phpcompatibility/phpcompatibility-wp": "^1"
	},
	"minimum-stability": "RC",
	"require-dev": {
        "phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0"
